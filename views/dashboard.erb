<div class="small-6 small-offset-3 columns">
  <div class="callout primary">
    <h3>Location</h3>
    <p>
      <%= @geolocation.city %>,
      <%= @geolocation.state %>,
      <%= @geolocation.country %>
    </p>
  </div>

  <div class="callout primary" id="Weather">
    <h3>Weather</h3>
    <p>The temperature is <%= @temp_f %>°F</p>
    <p>The temperature is <%= @temp_c %>°C <span>(for all you Europeans)</span></p>
  </div>

  <div class="callout primary" id="News">
    <h3>News</h3>
    <p>
      Here are today's top headlines:
    </p>
    <ul>
      <% @news.each do |story| %>
      <li><a href=" <%= story["url"]%>"><%= story["title"] %></a></li>
      <% end %>
    </ul>
  </div>




  <div class="callout primary" id="Events">
    <h3>Event</h3>
    <p>
      Here are today's events:
    </p>
    <ul>
      <% @events.each do |event| %>
      <li><a href="<%= event['url']%>"><%= event["title"] %></a></li>
      <% end %>
    </ul>
  </div>
</div>
